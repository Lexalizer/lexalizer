{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "esModuleInterop": true,
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}